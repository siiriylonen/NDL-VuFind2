<?php
  $dedupData = $this->driver->getDedupData(true);
  $deduplicated = count($dedupData) > 1;
?>

<div class="holding-details<?=$deduplicated ? ' deduplicated' : ''?>">
  <?php
  /* Display information on duplicate records if available */
  $preferredSource = $this->record($this->driver)->getPreferredSource();
  if ($deduplicated): ?>
    <div class="dedupInformation">
      <label>
        <?=$this->transEsc('Holdings')?>:
        <select class="dedup-select form-control" role="listbox" aria-haspopup="true" title="<?=$this->transEscAttr('select_dedup_organisation');?>" aria-label="<?=$this->transEscAttr('select_dedup_organisation');?>">
          <?php if (!$preferredSource):?>
            <option class="js-dedup-placeholder" value="" disabled selected><?= $this->transEsc('Show Holdings')?></option>
          <?php endif;?>
          <?php foreach ($dedupData as $source => $current): ?>
            <option value="<?=$this->escapeHtmlAttr($current['id']) ?>" class="dedup-data-id" data-source="<?=$this->escapeHtmlAttr($source) ?>"<?php if ($preferredSource === $source): ?> selected="selected"<?php endif; ?>><?=$this->transEsc("source_$source", null, $source) ?></option>
          <?php endforeach; ?>
        </select>
      </label>
    </div>
  <?php elseif ($preferredSource): ?>
    <div class="dedupInformation">
      <strong><?=$this->transEsc("source_$preferredSource", null, $preferredSource) ?></strong>
    </div>
  <?php endif; ?>

  <div class="callnumAndLocation ajax-availability hidden">
    <?php if ($this->driver->supportsAjaxStatus()): ?>
      <span class="callnumber ajax-availability hidden"></span>
      <span class="location ajax-availability hidden">
        <i class="fa fa-spinner fa-spin"></i> <?=$this->transEsc('loading_ellipsis')?>
      </span>
      <div class="locationDetails"></div>
    <?php else: ?>
      <?php $summCallNo = $this->driver->getCallNumber(); if (!empty($summCallNo)): ?>
        <strong><?=$this->transEsc('Call Number')?>:</strong> <?=$this->escapeHtml($summCallNo)?>
      <?php endif; ?>
    <?php endif; ?>
  </div>
</div>
